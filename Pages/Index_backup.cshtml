@page
@model IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Estate - Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <!-- Hero Section -->
    <div class="hero d-flex align-items-center justify-content-center text-center text-white"
         style="background: url('/images/background.jpg') no-repeat center center/cover; height: 60vh;">
        <div class="container">
            <h1>Welcome to Our Real Estate Portal</h1>
            <p class="lead">Find Your Dream Home Today</p>

            <!-- Search Bar -->
            <div class="search-bar bg-white p-3 rounded shadow-sm">
                <div class="row g-2">
                    <div class="col-md-3">
                        <select class="form-select">
                            <option selected>Property Type</option>
                            <option>Apartment</option>
                            <option>House</option>
                            <option>Villa</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select">
                            <option selected>Location</option>
                            <option>New York</option>
                            <option>Los Angeles</option>
                            <option>Chicago</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control" placeholder="Min Price">
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control" placeholder="Max Price">
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Property Listings -->
<div class="container mt-5">
    <!-- Different Types of Houses Section -->
    <h2 class="text-center mb-4">Explore Different Types of Houses</h2>
    <div class="row">
        <div class="col-md-4">
            <h5>Villas</h5>
            @foreach (var villa in Model.Properties.Where(p => p.PropertyTypeId == 1).Take(5))
            {
                <div class="card property-card shadow-sm mb-3">
                    <img src="@villa.ImageUrl" class="card-img-top" alt="@villa.Title">
                    <div class="card-body">
                        <h6 class="card-title">@villa.Title</h6>
                        <p class="card-text"><strong>@villa.Price</strong> | @villa.Size Sq Ft</p>
                        <a asp-page="UserHouseDetails" asp-route-id="@villa.Id" class="btn btn-primary w-100">View Details</a>
                    </div>
                </div>
            }
            <a asp-page="Houses" asp-route-type="1" class="btn btn-secondary w-100">View All</a>
        </div>
        <div class="col-md-4">
            <h5>Apartments</h5>
            @foreach (var apartment in Model.Properties.Where(p => p.PropertyTypeId == 2).Take(5))
            {
                <div class="card property-card shadow-sm mb-3">
                    <img src="@apartment.ImageUrl" class="card-img-top" alt="@apartment.Title">
                    <div class="card-body">
                        <h6 class="card-title">@apartment.Title</h6>
                        <p class="card-text"><strong>@apartment.Price</strong> | @apartment.Size Sq Ft</p>
                        <a asp-page="UserHouseDetails" asp-route-id="@apartment.Id" class="btn btn-primary w-100">View Details</a>
                    </div>
                </div>
            }
            <a asp-page="Houses" asp-route-type="2" class="btn btn-secondary w-100">View All</a>
        </div>
        <div class="col-md-4">
            <h5>Houses</h5>
            @foreach (var house in Model.Properties.Where(p => p.PropertyTypeId == 3).Take(5))
            {
                <div class="card property-card shadow-sm mb-3">
                    <img src="@house.ImageUrl" class="card-img-top" alt="@house.Title">
                    <div class="card-body">
                        <h6 class="card-title">@house.Title</h6>
                        <p class="card-text"><strong>@house.Price</strong> | @house.Size Sq Ft</p>
                        <a asp-page="UserHouseDetails" asp-route-id="@house.Id" class="btn btn-primary w-100">View Details</a>
                    </div>
                </div>
            }
            <a asp-page="Houses" asp-route-type="3" class="btn btn-secondary w-100">View All</a>
        </div>
    </div>
</div>
        <h2 class="text-center mb-4">Discover Our Featured Listings</h2>
        <div class="row">
            @foreach (var property in Model.Properties)
            {
                <div class="col-md-4">
                    <div class="card property-card shadow-sm">
                        <img src="@property.ImageUrl" class="card-img-top" alt="@property.Title">
                        <div class="card-body">
                            <h5 class="card-title">@property.Title</h5>
                            <p class="card-text"><strong>@property.Price</strong> | @property.Size Sq Ft</p>
                            <a asp-page="UserHouseDetails" asp-route-id="@property.Id" class="btn btn-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>