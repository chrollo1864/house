@page
@model IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Real Estate - Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@5.4.4/css/swiper.min.css" />

    <style>
        .bg-light {
            background-color: #030f25 !important;
        }

        .progress-bar {
            height: 5px;
            background-color: #00acc1;
        }

        .text-white-input {
            color: white;
        }

    </style>
</head>

<body class="bg-light text-dark">

    <!-- Hero Section -->
    <div class="hero position-relative d-flex align-items-center justify-content-center text-center"
         style="background: url('/images/background.jpg') no-repeat center center/cover; height: 80vh;">
        <div class="card-overlay1"></div>

        <div class="container position-relative text-white">
            <h1>Welcome to Our Real Estate Portal</h1>
            <p class="lead">Find Your Dream Home Today</p>

            <form method="get" action="/SearchResults" class="search-bar bg-white p-3 rounded shadow-sm mt-3">
                <div class="row g-2">
                    <div class="col-md-3">
                        <select class="form-select" name="propertyTypeId">
                            <option value="">Property Type</option>
                            @foreach (var pt in Model.PropertyTypes)
                            {
                                var selected = pt.Id.ToString() == Request.Query["propertyTypeId"] ? "selected" : null;
                                <option value="@pt.Id" selected="@selected">@pt.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="locationId">
                            <option value="">Location</option>
                            @foreach (var loc in Model.Locations)
                            {
                                var selected = loc.Id.ToString() == Request.Query["locationId"] ? "selected" : null;
                                <option value="@loc.Id" selected="@selected">@loc.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control white-bg" name="minPrice" placeholder="Min Price" value="@Request.Query["minPrice"]" />
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control white-bg" name="maxPrice" placeholder="Max Price" value="@Request.Query["maxPrice"]" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Featured Properties with Swiper -->
    <div class="container-fluid mt-5 text-center">
        <h2 class="mb-3" style="color: #cfb379; font-size: 1.5rem;">
            <i class="bi bi-fire me-1"></i> Our Featured <i class="bi bi-fire ms-1"></i>
        </h2>

        <!-- Flex container to hold carousel and buttons side-by-side -->
        <div class="d-flex justify-content-center align-items-center featured-carousel-wrapper">
            <!-- Swiper Carousel -->
            <div id="scrollingWrapper" class="swiper-container pb-3 flex-grow-1">
                <div class="swiper-wrapper">
                    @foreach (var property in Model.Properties.Where(p => p.IsFeatured).OrderByDescending(p => p.CreatedAt).Take(10))
                    {
                        <div class="swiper-slide">
                            <a href="/UserHouseDetails/@property.Id" class="text-decoration-none">
                                <div class="scrolling-card">
                                    <img src="@property.ImageUrl" alt="@property.Title">
                                    <div class="card-overlay">
                                        <div class="card-title-text">@property.Title</div>
                                        <div class="card-info">₱@property.Price.ToString("N0") · @property.Size Sq Ft</div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Buttons in a vertical stack on the right side -->
            <div class="d-flex flex-column ms-3 mb-3">
                <button id="btnRight" class="carousel-button mb-2">
                    <i class="bi bi-chevron-right"></i>
                </button>
                <button id="btnLeft" class="carousel-button">
                    <i class="bi bi-chevron-left"></i>
                </button>
            </div>
        </div>
    </div>



    <!-- Progress Bar -->
    <div class="progress ms-4 me-5 mt-1" style="height: 5px;">
        <div id="progressBar" class="progress-bar" role="progressbar"></div>
    </div>


    <!-- Latest Villas -->
    <div class="container-fluid mt-5">
        <h2 class="mb-3" style="color: #cfb379;">Latest Villas</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-4">
            @foreach (var property in Model.Properties
            .Where(p => p.PropertyTypeId == 5)
            .OrderByDescending(p => p.CreatedAt)
            .Take(10))
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <img src="@property.ImageUrl" class="card-img-top" alt="@property.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" style="color: white;">@property.Title</h5>
                            <p class="card-text" style="color: #cfb379;">₱@property.Price.ToString("N0") · @property.Size Sq Ft</p>
                            <a href="/UserHouseDetails/@property.Id" class="btn custom-outline w-100 mt-auto position-relative">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

