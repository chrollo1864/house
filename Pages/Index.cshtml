@page
@model IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Real Estate - Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <style>
        .bg-light {
            background-color: #030f25 !important;
        }

        .progress-bar {
            height: 100%;
            width: 0%;
            background-color: #cfb379;
            transition: width 3s linear;
        }

        .text-white-input {
            color: white;
        }

        .white-bg {
            background-color: white !important;
        }


    </style>
</head>

<body class="bg-light text-dark">

    <!-- Hero Section -->
    <div class="hero d-flex align-items-center justify-content-center text-center"
         style="background: url('/images/background.jpg') no-repeat center center/cover; height: 60vh;">
        <div class="container">
            <h1>Welcome to Our Real Estate Portal</h1>
            <p class="lead">Find Your Dream Home Today</p>

            <!-- Search Bar -->
            <form method="get" action="/SearchResults" class="search-bar bg-white p-3 rounded shadow-sm">
                <div class="row g-2">
                    <div class="col-md-3">
                        <select class="form-select" name="propertyTypeId">
                            <option value="">Property Type</option>
                            @foreach (var pt in Model.PropertyTypes)
                            {
                                var selected = pt.Id.ToString() == Request.Query["propertyTypeId"] ? "selected" : null;
                                <option value="@pt.Id" selected="@selected">@pt.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="locationId">
                            <option value="">Location</option>
                            @foreach (var loc in Model.Locations)
                            {
                                var selected = loc.Id.ToString() == Request.Query["locationId"] ? "selected" : null;
                                <option value="@loc.Id" selected="@selected">@loc.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control white-bg" name="minPrice" placeholder="Min Price" value="@Request.Query["minPrice"]" />
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control white-bg" name="maxPrice" placeholder="Max Price" value="@Request.Query["maxPrice"]" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Featured Properties -->
<div class="container mt-5 position-relative text-center">
    <h2 class="mb-3" style="color: #cfb379; font-size: 1.5rem;">
        <i class="bi bi-fire" style="margin-right: -2px; font-size: 1.2rem;"></i> Our Featured 
        <i class="bi bi-fire" style="margin-left: -2px; font-size: 1.2rem;"></i>
    </h2>
        <div id="scrollingWrapper" class="scrolling-wrapper pb-3">
            @foreach (var property in Model.Properties
            .Where(p => p.IsFeatured)
            .OrderByDescending(p => p.CreatedAt)
            .Take(10))
            {
                <a href="/UserHouseDetails/@property.Id" class="text-decoration-none">
                    <div class="scrolling-card">
                        <img src="@property.ImageUrl" alt="@property.Title">
                        <div class="card-overlay">
                            <div class="card-title-text">@property.Title</div>
                            <div class="card-info">₱@property.Price.ToString("N0") · @property.Size Sq Ft</div>
                        </div>
                    </div>
                </a>
            }
        </div>

        <!-- Carousel Control Buttons -->
        <div class="carousel-buttons">
            <button id="btnLeft" class="carousel-button">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button id="btnRight" class="carousel-button">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>

        <!-- Progress Bar -->
        <div class="progress-bar-wrapper">
            <div id="progressBar" class="progress-bar"></div>
        </div>
    </div>

    <!-- Latest Villas -->
    <div class="container mt-5">
        <h2 class="mb-4" style="color: #cfb379;">Latest Villas</h2>
        <div class="row">
            @foreach (var property in Model.Properties
            .Where(p => p.PropertyTypeId == 5)
            .OrderByDescending(p => p.CreatedAt)
            .Take(6))
            {
                <div class="col-md-4 mb-4 d-flex">
                    <div class="card shadow-sm w-100 d-flex flex-column">
                        <img src="@property.ImageUrl" class="card-img-top" alt="@property.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" style="color: white;">@property.Title</h5>
                            <p class="card-text" style="color: #cfb379;">₱@property.Price.ToString("N0") · @property.Size Sq Ft</p>
                            <div class="mt-auto">
                                <a href="/UserHouseDetails/@property.Id" class="btn btn-outline-primary w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

