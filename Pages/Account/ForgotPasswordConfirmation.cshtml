@page
@model HouseApp.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h2>Password Reset Email Sent</h2>
                    <p>If an account with the provided email exists, a password reset link has been sent. Please check your email.</p>
                    <a asp-page="/Account/Login" class="btn btn-primary mt-3">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
