@page
@model Pages.Account.MyLoansModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>My Loan Applications</h2>

@if (Model.Loans == null || !Model.Loans.Any())
{
    <p>You have not submitted any loan applications yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Application Date</th>
                <th>Status</th>
                <th>Amount</th>
                <th>Term (Months)</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Province</th>
                <th>Municipality</th>
                <th>Barangay</th>
                <th>Age</th>
                <th>Birth Date</th>
                <th>Sex</th>
                <th>Contact No.</th>
                <th>Email</th>
                <th>Occupation</th>
                <th>Civil Status</th>
                <th>Preferred Payment Frequency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model.Loans)
            {
                <tr>
                    <td>@loan.Id</td>
                    <td>@loan.ApplicationDate.ToShortDateString()</td>
                    <td>@loan.Status</td>
                    <td>@loan.Amount</td>
                    <td>@loan.TermMonths</td>
                    <td>@loan.FirstName</td>
                    <td>@loan.LastName</td>
                    <td>@loan.Province</td>
                    <td>@loan.Municipality</td>
                    <td>@loan.Barangay</td>
                    <td>@loan.Age</td>
                    <td>@loan.BirthDate.ToShortDateString()</td>
                    <td>@loan.Sex</td>
                    <td>@loan.ContactNo</td>
                    <td>@loan.Email</td>
                    <td>@loan.Occupation</td>
                    <td>@loan.CivilStatus</td>
                    <td>@loan.PreferredPaymentFrequency</td>
                </tr>
            }
        </tbody>
    </table>
}
