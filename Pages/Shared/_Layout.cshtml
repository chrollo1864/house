<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Real Estate Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
            background-color: #343a40;
            color: white;
            padding: 1rem 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-0">
            <div class="container-fluid ms-5 me-5">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="fas fa-home me-2"></i>Real Estate Portal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon" style="background-image: url('data:image/svg+xml;charset=utf8,%3csvg viewBox=%270 0 30 30%27 xmlns=%27http://www.w3.org/2000/svg%27%3e%3cpath stroke=%27%23cfb379%27 stroke-linecap=%27round%27 stroke-miterlimit=%2710%27 stroke-width=%272%27 d=%27M4 7h22M4 15h22M4 23h22%27/%3e%3c/svg%3e');"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="stylesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                STYLES
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="stylesDropdown">
                                <li><a class="dropdown-item" href="/styles/modern">Modern</a></li>
                                <li><a class="dropdown-item" href="/styles/classic">Classic</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="collectionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                PROPERTY TYPES
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="collectionsDropdown">
                                <li><a class="dropdown-item" href="/Villas/">Villas</a></li>
                                <li><a class="dropdown-item" href="/FamilyHouse/">Family Houses</a></li>
                                <li><a class="dropdown-item" href="/Apartments/">Apartments</a></li>
                                <li><a class="dropdown-item" href="/Condominiums/">Condominiums</a></li>
                                <li><a class="dropdown-item" href="/ModernHouses/">Modern Houses</a></li>
                                <li><a class="dropdown-item" href="/TownHouses/">Town Houses</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="collectionsDropdown2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                COLLECTIONS
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="collectionsDropdown2">
                                <li><a class="dropdown-item" href="/collections/spring">Spring</a></li>
                                <li><a class="dropdown-item" href="/collections/summer">Summer</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="aboutDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ABOUT
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                                <li><a class="dropdown-item" href="/About">About Us</a></li>
                                <li><a class="dropdown-item" href="/team">Our Team</a></li>
                                <li><a class="dropdown-item" href="/privacy">Privacy Policy</a></li>
                                <li><a class="dropdown-item" href="/faq">FAQ</a></li>
                                <li><a class="dropdown-item" href="/contact">Contact Us</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Cart">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Admin/Index">
                                    <i class="fas fa-cog me-1"></i> Admin
                                </a>
                            </li>
                        }
                    </ul>
                    <form method="get" asp-page="/SearchResults" class="d-flex me-3" role="search">
                        <input class="form-control form-control-sm me-2 custom-placeholder" type="search" name="title" placeholder="Search houses" aria-label="Search houses" />
                        <button class="btn custom-outline btn-sm" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> @(User.Identity?.Name ?? "User")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/Profile">
                                            <i class="fas fa-user me-2"></i> My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/MyLoans">
                                            <i class="fas fa-file-invoice-dollar me-2"></i> My Loans
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/Favorite">
                                            <i class="fas fa-heart me-2"></i> Favorites
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Account/Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3 pt-0">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 style="color: #cfb379;">About Us</h5>
                    <p>Your trusted partner in finding the perfect home.</p>
                </div>
                <div class="col-md-4">
                    <h5 style="color: #cfb379;">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Index" class="text-white">Home</a></li>
                        <li><a asp-page="/Houses/Search" class="text-white">Search Properties</a></li>
                        <li><a asp-page="/Privacy" class="text-white">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 style="color: #cfb379;">Contact</h5>
                    <ul class="list-unstyled">
                        <li><a asp-page="/contact" class="text-white">Contact</a></li>
                        <li><i class="fas fa-phone me-2"></i>(555) 123-4567</li>
                    </ul>
                </div>
            </div>
            <hr />
            <div class="text-center">
                &copy; @DateTime.Now.Year - Real Estate Portal - <a asp-page="/Privacy" class="text-white">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
