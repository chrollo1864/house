@page
@model AdminLoansModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}

<h2>Manage Loans</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.Loans)
        {
            <tr>
                <td>@loan.Id</td>
                <td>@loan.UserName</td>
                <td>@loan.Amount</td>
                <td>@loan.Status</td>
                <td>
                    <a asp-page="/Admin/EditLoan" asp-route-id="@loan.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="/Admin/DeleteLoan" asp-route-id="@loan.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
