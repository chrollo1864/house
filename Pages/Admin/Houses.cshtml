@page
@model AdminHousesModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}

<h2>Manage Houses</h2>
<a asp-page="/Admin/AddHouse" class="btn btn-primary mb-3">Add House</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var house in Model.Houses)
        {
            <tr>
                <td>@house.Id</td>
                <td>@house.Title</td>
                <td>@house.Price</td>
                <td>
                    <a asp-page="/Admin/EditHouse" asp-route-id="@house.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="/Admin/DeleteHouse" asp-route-id="@house.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
