@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-md-3">
            <div class="list-group mb-4">
                <a asp-page="/Admin/Houses" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Houses" ? "active" : "")">
                    Houses
                </a>
                <a asp-page="/Admin/PropertyTypes" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/PropertyTypes" ? "active" : "")">
                    Property Types
                </a>
                <a asp-page="/Admin/Locations" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Locations" ? "active" : "")">
                    Locations
                </a>
                <a asp-page="/Admin/Users" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Users" ? "active" : "")">
                    Users
                </a>
                <a asp-page="/Admin/Loans" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Loans" ? "active" : "")">
                    Loans
                </a>
            </div>
        </div>
        <div class="col-md-9">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}
