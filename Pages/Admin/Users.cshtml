@page
@model AdminUsersModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}

<h2>Manage Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-page="/Admin/EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="/Admin/DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
