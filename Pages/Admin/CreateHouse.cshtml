@page
@model HouseApp.Pages.Admin.CreateHouseModel
@{
    ViewData["Title"] = "Add New House";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h2>Add New House</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <label asp-for="House.Title" class="control-label">Title</label>
                    <input asp-for="House.Title" class="form-control" required />
                    <span asp-validation-for="House.Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="House.Description" class="control-label">Description</label>
                    <textarea asp-for="House.Description" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="House.Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="House.Address" class="control-label">Address</label>
                    <input asp-for="House.Address" class="form-control" required />
                    <span asp-validation-for="House.Address" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="House.Price" class="control-label">Price</label>
                            <input asp-for="House.Price" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="House.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="House.Size" class="control-label">Size (sq ft)</label>
                            <input asp-for="House.Size" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="House.Size" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="House.Bedrooms" class="control-label">Bedrooms</label>
                            <input asp-for="House.Bedrooms" class="form-control" type="number" required />
                            <span asp-validation-for="House.Bedrooms" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="House.Bathrooms" class="control-label">Bathrooms</label>
                            <input asp-for="House.Bathrooms" class="form-control" type="number" />
                            <span asp-validation-for="House.Bathrooms" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="House.Floors" class="control-label">Floors</label>
                            <input asp-for="House.Floors" class="form-control" type="number" />
                            <span asp-validation-for="House.Floors" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="House.PropertyTypeId" class="control-label">Property Type</label>
                            <select asp-for="House.PropertyTypeId" class="form-control" asp-items="Model.PropertyTypes" required>
                                <option value="">-- Select Type --</option>
                            </select>
                            <span asp-validation-for="House.PropertyTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="House.LocationId" class="control-label">Location</label>
                    <select asp-for="House.LocationId" class="form-control" asp-items="Model.Locations" required>
                        <option value="">-- Select Location --</option>
                    </select>
                    <span asp-validation-for="House.LocationId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageFile" class="control-label">House Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" required />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="House.IsAvailable" class="form-check-input" type="checkbox" />
                    <label asp-for="House.IsAvailable" class="form-check-label">Available for Sale/Rent</label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                    <label asp-for="IsFeatured" class="form-check-label">Featured Listing</label>
                    <span asp-validation-for="IsFeatured" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-page="Houses" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}