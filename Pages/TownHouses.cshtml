@page
@model house.Pages.TownHousesModel
@{
    ViewData["Title"] = "TownHouses";
}

<div class="container-fluid mt-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-4">
        @foreach (var property in Model.TownHouses)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <img src="@property.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate text-white">@property.Title</h5>
                        <p class="card-text" style="color: #cfb379;">₱@property.Price.ToString("N0") · @property.Size Sq Ft</p>
                        <a href="/UserHouseDetails/@property.Id" class="btn btn-outline-primary w-100 mt-auto">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Controls -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/TownHouses/@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="/TownHouses/@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/TownHouses/@(Model.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>